<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtraCurricular">

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="188dp"
        android:layout_height="58dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="645dp"
        android:text="Club Information"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFBLA"
        android:layout_width="143dp"
        android:layout_height="38dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="556dp"
        android:text="       FBLA"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtSciOly"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="209dp"
        android:layout_marginBottom="296dp"
        android:text="       SciOly"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSciolydesc"
        android:layout_width="267dp"
        android:layout_height="94dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="435dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="202dp"
        android:text="Science Olympiad is an American team competition in which students compete in 23 events pertaining to various fields of science, including earth science, biology, chemistry, physics, and engineering. "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFBLADesc2"
        android:layout_width="260dp"
        android:layout_height="126dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="456dp"
        android:text="FBLA is the high school division of Future Business Leaders of America-Phi Beta Lambda, Inc. FBLA helps high school students prepare for careers in business through academic competitions, leadership development, and educational programs."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSignup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="373dp"
        android:onClick="onFBLASignup"
        android:text="Sign up!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSignup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="541dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="142dp"
        android:onClick="onSciolySignup"
        android:text="Sign up!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>